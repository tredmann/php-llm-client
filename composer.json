{
    "name": "tredmann/php-llm-client",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "LLM\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Tobias Redmann",
            "email": "tobias.redmann@gmail.com"
        }
    ],
    "require": {
        "openai-php/client": "^0.10.3",
        "symfony/http-client": "^7.2",
        "nyholm/psr7": "^1.8",
        "google-gemini-php/client": "^1.0",
        "tredmann/php-ollama": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require-dev": {
        "laravel/pint": "^1.19"
    },
    "scripts": {
        "phpunit": [
            "XDEBUG_MODE=off ./vendor/bin/phpunit -d memory_limit=2048M "
        ],
        "pint": [
            "@php vendor/bin/pint --preset=psr12"
        ],
        "coverage": [
            "XDEBUG_MODE=coverage ./vendor/bin/phpunit -d memory_limit=2048M --coverage-html coverage/"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse src --level=5"
        ]
    }
}
